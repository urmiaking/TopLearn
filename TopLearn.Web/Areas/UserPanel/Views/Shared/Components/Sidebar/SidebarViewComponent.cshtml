@model UserSidebarViewModel

<div class="col-md-3 col-sm-4 col-xs-12">
    <aside>

        <div class="avatar-layer">
            <div class="img-layer">
                <a href="" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                <img src="/images/avatars/@Model.Avatar" alt="">
            </div>
            <div class="detail">
                <span> @Model.Name </span>
                <span> عضویت : @Model.RegisterDate.ToPersianDateString() </span>
            </div>
        </div>

        <section>
            <header>
                <h3> میز کار </h3>
            </header>
            <div class="inner">
                <ul>
                    <li><a asp-area="UserPanel" asp-controller="Home" asp-action="Index"> مشاهده حساب کاربری </a></li>
                    <li><a asp-area="UserPanel" asp-controller="Home" asp-action="EditProfile"> ویرایش حساب کاربری </a></li>
                    <li><a asp-area="UserPanel" asp-controller="Home" asp-action="ChangePassword"> تغییر رمز عبور </a></li>
                    <li><a asp-area="UserPanel" asp-controller="Wallet" asp-action="Index"> کیف پول شما </a></li>
                    <li><a asp-area="UserPanel" asp-controller="Home" asp-action="Settings"> تنظیمات </a></li>
                    <li><a asp-area="" asp-controller="Account" asp-action="Logout"> خروج </a></li>
                </ul>
            </div>
        </section>
    </aside>
</div>