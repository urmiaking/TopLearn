@model ResetPasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ul>
    </nav>
</div>

<main class="client-page">
    <div class="container-content">

        <header><h2> @ViewData["Title"] </h2></header>

        <div class="form-layer">

            <form asp-action="ResetPassword" method="post">

                <input asp-for="ActivationCode" type="hidden"/>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>
                <span asp-validation-for="Password"></span>

                <div class="input-group">
                    <span class="input-group-addon" id="repeat-password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="RepeatPassword" type="password" class="form-control" placeholder="تکرار رمز عبور " aria-describedby="repeat-password">
                </div>
                <span asp-validation-for="RepeatPassword"></span>
                <br/>
                <button type="submit" class="btn btn-success">تایید</button>

            </form>
        </div>

    </div>
</main>

