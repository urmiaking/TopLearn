<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <title> تاپ لرن | @ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/ico" href="/favicon.ico" />
    <partial name="_MetaTags" />
    <partial name="_Styles" />
    <script src="/js/jquery.min.js"></script>
</head>
<body>
<script src="/js/modernizr-custom.js"></script>

<div class="landing-layer">
    <div class="container">
        <nav>
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <ul>
                        <li>
                            <a href=""> همکاری در فروش </a>
                            <a href=""> درباره ما </a>
                            <a href=""> تماس با ما </a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-6 col-xs-12">
                    <div class="clientarea">
                        @if (User.Identity.IsAuthenticated)
                        {
                        <div class="loggein">
                            <i class="zmdi zmdi-account"></i>
                            <a asp-area="UserPanel"
                               asp-controller="Home"
                               asp-action="Index">
                                 @User.FindFirst(ClaimTypes.GivenName).Value
                            </a>
                            /
                            <a asp-action="Logout" asp-controller="Account"> خروج </a>
                        </div>
                        }
                        else
                        {
                            <div class="signin">
                                <i class="zmdi zmdi-account"></i>
                                <a asp-action="Login" asp-controller="Account"> ورود </a> /
                                <a asp-action="Register" asp-controller="Account"> عضویت </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
        @await RenderSectionAsync("SearchBox",false)
    </div>
</div>

<!-- main menu -->
<partial name="_MainMenu" />
<!-- /main menu -->

<!-- content -->
@RenderBody()
<!-- /content -->

<!-- footer -->
<partial name="_Footer" />
<!-- /footer -->

<partial name="_Scripts"/>
</body>
</html>